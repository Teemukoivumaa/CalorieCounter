<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalorieCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Top bar & buttons -->
        <item name="colorPrimary">@color/Charcoal</item>
        <!-- Progressbar color -->
        <item name="colorSecondary">@color/BurntSienna</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="android:colorBackground">@color/Gunmetal</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="actionBarStyle">@style/MyActionBarDarkStyle</item>
    </style>

    <!-- Our new style for ActionBar -->
    <style name="MyActionBarDarkStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/Charcoal</item>
    </style>
</resources>